{
  "functions": [
    {
      "defaultMemory": "512MB",
      "functionConfig": {
        "telegramWebhook": {
          "memory": "512MB",
          "timeoutSeconds": 180,
          "minInstances": 1,
          "maxInstances": 3
        },
        "sunoWebhook": {
          "memory": "256MB",
          "timeoutSeconds": 180,
          "minInstances": 1,
          "maxInstances": 1
        }
      },
      "timeoutSeconds": 180,
      "minInstances": 1,
      "maxInstances": 3,
      "source": "functions",
      "runtime": "nodejs22",
      "codebase": "default",
      "2ndGen": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
